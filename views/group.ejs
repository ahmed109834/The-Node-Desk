<div ng-controller="GroupController">

    <button ng-click="listGroups()" class="btn btn-md btn-warning">List groups</button>

    <input ng-model="query" classs="form-control" type="text" placeholder="Search">

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Members</th>
                <th>Role</th>
                <th>type</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="g in groups | filter:query">
                <td><a href="http://localhost:1337/group/{{g.id}}">More Info</a>
                </td>
                <td><b><a class="1" href="#" editable-text="g.groupName" style="color: #000000; text-decoration: none; border-bottom: 0px solid">{{ g.groupName || "empty" }}</a></b>
                </td>
                <td><b><a class="1" href="#" editable-text="g.members" style="color: #000000; text-decoration: none; border-bottom: 0px solid">{{ g.members || "empty" }}</a></b>
                </td>
                <td><b><a class="1" href="#" editable-text="g.role" style="color: #000000; text-decoration: none; border-bottom: 0px solid">{{ g.role || "empty" }}</a></b>
                </td>
                <td><b><a class="1" href="#" editable-text="g.type" style="color: #000000; text-decoration: none; border-bottom: 0px solid">{{ g.type || "empty" }}</a></b>
                </td>
                <td>
                    <button ng-click="removeGroup(g.id)" class="btn btn-sm btn-danger">DELETE</button>
                </td>
                <td>
                    <button ng-click="updateGroup(g.id, $index)" class="btn btn-sm btn-success">Update</button>
                </td>


            </tr>
        </tbody>
    </table>
</div>